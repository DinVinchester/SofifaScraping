extends ../layout
block content
    h1 Login
    div(class="row")
        div(class="col-md-4")
            form(name="login", id="login", action="/users/login", method="post", class="form form-horizontal")
                if error != ""
                    div(class="alert alert-danger alert-dismissible", role="alert", id="errorPlaceHolder")
                        button(type="button", class="close", data-dismiss="alert", aria-label="Close")
                            span(aria-hidden="true") &times;
                        span= error
                else
                    div(class="alert alert-danger alert-dismissible", role="alert", id="errorPlaceHolder", style="display:none;")
                        button(type="button", class="close", data-dismiss="alert", aria-label="Close")
                            span(aria-hidden="true") &times;
                div(class="form-group")
                    input(type="email", placeholder="Email", class="form-control", name="email")
                div(class="form-group")
                    input(type="password", placeholder="Password", class="form-control", name="password")
                div(class="form-group")
                    button(type="submit", class="btn btn-success") Login
                    = ' '
                    a(href="/users/register") Register!

extends ../layout
block content
    h2 Change Player
    p Select an user and change all the players that you want.
    div(class="row")
        form(action='/users/changePlayer', method="post", class="form-form-horizontal", id="changePlayerForm")
            div(class="row")
                div(class="col-md-6")
                    h3 My Team
                    ul(class="list-unstyled")
                        each p in userTeam.Players
                            li
                                span #{p.OrderSelected} - #{p._IdPlayer.Name}
                                = ' '
                                b #{p._IdPlayer.Position}
                                = ' '
                                input(type="radio", name="playerTo", value="#{p._IdPlayer._id}")
                div(class="col-md-6")
                    div(class="form-group")
                        select(id="sUserTeam", class="form-control" name="selectedUser")
                            option(value="0") Select User
                            each u in userList
                                option(value="#{u._id}") #{u.Username}
                    div(id="otherTeam")
            div(class="row")
                div(class="col-md-2")
                    button(type="submit", class="btn btn-success", id="btnChangePlayers") Confirm Change
doctype html
html
    head
        title="Fifa 16"
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
    body
        div(class="navbar navbar-default navbar-fixed-top")
            div(class="container-fluid")
                div(class="navbar-header")
                    button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#main-nav", arial-expanded="false")
                        span(class="sr-only")
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                div(class="collapse navbar-collapse", id="main-nav")
                    ul(class="nav navbar-nav")
                        li
                            if user
                                a(href="/users") Home
                            else
                                a(href="/") Home
                        li
                            a(href="https://dl.dropboxusercontent.com/u/8567549/Fifa16_Players.xlsx") Download Players
                        if user
                            li(class="dropdown")
                                a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") My Team
                                    = ' '
                                    span(class="caret")
                                ul(class="dropdown-menu")
                                    li
                                        a(href="/draft/addPlayer") Add Player
                                    li
                                        a(href="/users/changePlayer") Change Players
                                    li
                                        a(href="/users/myTeam") View My Team
                        li
                            a(href="/draft/allTeams") View all Teams
                        if currentDraft
                            li
                                a(href="/draft/currentDraftOrder") Current Draft Round
                        if IsUserTurn
                            li
                                a(href="/draft/selectPlayer") Select Player

                        if user && user.IsAdmin
                            li(class="dropdown")
                                a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Draft
                                    = ' '
                                    span(class="caret")
                                ul(class="dropdown-menu")
                                    li
                                        a(href="/draft/newDraft") New Draft
                                    li
                                        a(href="/draft/draftTeam") Draft Team
                                    li
                                        a(href="/draft/resetDraft") Reset Draft
                                    li
                                        a(href="/draft/cancel") Cancel Draft
                        if user && user.IsAdmin
                            li(class="dropdown")
                                a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Admin
                                    = ' '
                                    span(class="caret")
                                ul(class="dropdown-menu")
                                    li
                                        a(href="/users/list") Users List
                                    li
                                        a(href="/setting/") Settings
                        if user
                                li
                                    a(href="/users/logout") Log Off!
                            else
                                li
                                    a(href="/users/login") Login!
        div(class="row")
            div(class="col-md-12")
                block content
        footer
            hr
            p Plus54
        script(src='/javascripts/jquery-2.1.1.js', type='text/javascript')
        script(src='/javascripts/bootstrap.js', type='text/javascript')
        script(src='/javascripts/jquery.autocomplete.js', type='text/javascript')
        script(src='/javascripts/main.js', type='text/javascript')
